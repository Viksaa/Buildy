@model IEnumerable<Buildy.Models.PC_Components.PSU>

@{
    ViewBag.Title = "AddPsu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>View</h2>

<table class="table" id="Psu">
    <thead>
        <tr>
            <th class="no-sort">
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PsuEficency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity) W
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" width="100" height="50">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PsuEficency.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)Gb
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modular)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Add", "AddPsuToPc", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>

</table>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#Psu").dataTable({
                "order": [],
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false
                }]
            });
        });
    </script>
}

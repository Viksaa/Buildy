@model Buildy.Models.Computer
@using Buildy.Models.PC_Components

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<table id="PcTable" class="table">
    <thead>
        <tr>
            <th>Part</th>
            <th>Selected Part</th>
            <th>Selection</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>CPU</td>
            <td>
                @{
                    var cpu = "";
                    if (Session["Cpu"] != null)
                    {
                        var temp = (CPU)Session["Cpu"];
                        cpu = temp.Manufacturer.Name+" "+temp.Name;
                    }
                }
                <a href="/computers">@cpu</a>
            </td>
            <td>
                @Html.ActionLink("Add", "AddCpu", "Computers", new { @class = "btn btn-success" })
                @{
                    if (cpu != "")
                    {
                        @Html.ActionLink("Remove", "RemoveCpu", "Computers", 
                            new { @class = "btn btn-danger", confirm = true, onclick = "return confirm('Are you sure you want to delete this ?')" })
                    }
                }
            </td>
        </tr>
        <tr>
            <td>Motherboard</td>
            <td>
                @{
                    var mb = "";
                    if (Session["Mb"] != null)
                    {
                        var tmp = (Motherboard) Session["Mb"];
                        mb = tmp.Manufacturer.Name+" "+tmp.Name;
                    }
                }
                <a href="/computers">@mb</a>
            </td>
            <td>
                 @Html.ActionLink("Add", "AddMotherboard", "Computers", new {@class = "btn btn-success"})
                 @{
                     if (mb != "")
                     {
                         @Html.ActionLink("Remove", "RemoveMotherboard", "Computers",
                             new { @class = "btn btn-danger", confirm = true, onclick = "return confirm('Are you sure you want to delete this ?')"})
                     }
                 }
            </td>
        </tr>
        <tr>
            <td>Memory</td>
            <td>
                @{
                    var ram = "";
                    if (Session["Ram"] != null)
                    {
                        var tmp = (RAM)Session["Ram"];
                        ram = tmp.Manufacturer.Name + " " + tmp.Name;
                    }
                    <a href="/computers">@ram</a>
                }
            </td>
            <td>
                @Html.ActionLink("Add", "AddRam", "Computers", new { @class = "btn btn-success" })
                @{
                    if (ram != "")
                    {
                        @Html.ActionLink("Remove", "RemoveRam", "Computers",
                            new { @class = "btn btn-danger", confirm = true, onclick = "return confirm('Are you sure you want to delete this ?')" })
                    }
                }
            </td>

        </tr>
        <tr>
            <td>GPU</td>
            <td>
                @{
                    var Gpu = "";
                    if (Session["Gpu"] != null)
                    {
                        var tmp = (GPU)Session["Gpu"];
                        Gpu = tmp.Manufacturer.Name+" "+tmp.Name;
                    }
                    <a href="/computers">@Gpu</a>
                }
            </td>
            <td>
                @Html.ActionLink("Add", "AddGpu", "Computers", new { @class = "btn btn-success" })
                        @{
                            if (Gpu != "")
                            {
                                @Html.ActionLink("Remove", "RemoveGpu", "Computers",
                                    new { @class = "btn btn-danger", confirm = true, onclick = "return confirm('Are you sure you want to delete this ?')" })
                            }
                        }
                    </td>
        </tr>
        <tr>
            <td>Case</td>
            <td>
                @{
                    var Case = "";
                    if (Session["Case"] != null)
                    {
                        var tmp = (Case)Session["Case"];
                        Case = tmp.Manufacturer.Name+" "+tmp.Name;
                    }
                    <a href="/computers">@Case</a>
                }
            </td>
            <td>
                @Html.ActionLink("Add", "AddCase", "Computers", new { @class = "btn btn-success" })
                @{
                    if (Case != "")
                    {
                        @Html.ActionLink("Remove", "RemoveCase", "Computers",
                            new { @class = "btn btn-danger", confirm = true, onclick = "return confirm('Are you sure you want to delete this ?')" })
                    }
                }
            </td>
        </tr>
        <tr>
            <td>Storage</td>
            <td></td>
            <td> @Html.ActionLink("Add", "AddCpu", "Computers", new { @class = "btn btn-success" })</td>
        </tr>
        <tr>
            <td>Power Supply</td>
            <td>
                @{
                    var Psu = "";
                    if (Session["Psu"] != null)
                    {
                        var tmp = (PSU)Session["Psu"];
                        Psu = tmp.Manufacturer.Name + " " + tmp.Name;
                    }
                    <a href="/computers">@Psu</a>
                }
            </td>
            <td>
                @Html.ActionLink("Add", "AddPsu", "Computers", new { @class = "btn btn-success" })
                @{
                    if (Psu != "")
                    {
                        @Html.ActionLink("Remove", "RemovePsu", "Computers",
                            new { @class = "btn btn-danger", confirm = true, onclick = "return confirm('Are you sure you want to delete this ?')" })
                    }
                }
            </td>
        </tr>
        <tr>
            <td>Cooling</td>
            <td></td>
            <td> @Html.ActionLink("Add", "AddCpu", "Computers", new { @class = "btn btn-success" })</td>
        </tr>
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $(".btn-delete").click(function(event) {
                event.preventDefault();
                $('<div title="Confirm Box"></div>').dialog({
                    open: function (event, ui) {
                        $(this).html("Yes or No question?");
                    },
                    close: function () {
                        $(this).remove();
                    },
                    resizable: false,
                    height: 140,
                    modal: true,
                    buttons: {
                        'Yes': function () {
                            $(this).dialog('close');
                            $.post('url/theValueYouWantToPass');

                        },
                        'No': function () {
                            $(this).dialog('close');
                            $.post('url/theOtherValueYouWantToPAss');
                        }
                    }
                });
            });
        });
    </script>
}


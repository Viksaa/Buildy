@model IEnumerable<Buildy.Models.PC_Components.GPU>

@{
    ViewBag.Title = "Add Gpu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table" id="Gpu">
    <thead>
        <tr>
            <th class="no-sort">
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RamMemoryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAMSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemoryClock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" width="100" height="50">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RamMemoryType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RAMSize)Gb
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timing)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Frequency) MHz
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemoryClock) Mhz
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Add", "AddGpuToPc", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>

</table>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#Gpu").dataTable({
                "order": [],
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false
                }]
            });
        });
    </script>
}
